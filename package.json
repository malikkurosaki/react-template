{
	"name": "bun-react-template",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
		"dev:backend": "NODE_ENV=development bun --hot src/index.ts",
		"dev:frontend": "vite",
		"build": "vite build",
		"start": "NODE_ENV=production bun src/index.ts",
		"preview": "bun run build && bun start",
		"generate": "bun x @tanstack/router-cli generate",
		"watch:routes": "bun x @tanstack/router-cli generate --watch",
		"check": "biome check --write .",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"seed": "bun run prisma/seed.ts"
	},
	"dependencies": {
		"@better-auth/cli": "^1.4.18",
		"@elysiajs/cors": "^1.4.1",
		"@elysiajs/eden": "^1.4.6",
		"@elysiajs/static": "^1.4.7",
		"@elysiajs/swagger": "^1.3.1",
		"@mantine/core": "^8.3.13",
		"@mantine/dates": "^8.3.13",
		"@mantine/hooks": "^8.3.13",
		"@modelcontextprotocol/sdk": "^1.25.3",
		"@prisma/adapter-pg": "^7.3.0",
		"@prisma/client": "^6.19.2",
		"@tabler/icons-react": "^3.36.1",
		"@tanstack/react-router": "^1.157.16",
		"better-auth": "^1.4.18",
		"dayjs": "^1.11.19",
		"elysia": "^1.4.22",
		"nanoid": "^5.1.6",
		"pino": "^10.3.0",
		"pino-pretty": "^13.1.3",
		"postcss": "^8.5.6",
		"postcss-preset-mantine": "^1.18.0",
		"postcss-simple-vars": "^7.0.1",
		"react": "^19",
		"react-dom": "^19",
		"valtio": "^2.3.0"
	},
	"devDependencies": {
		"@babel/core": "^7.29.0",
		"@babel/plugin-transform-react-jsx-source": "^7.27.1",
		"@biomejs/biome": "^2.3.13",
		"@react-dev-inspector/vite-plugin": "^2.0.1",
		"@tanstack/react-router-devtools": "^1.157.16",
		"@tanstack/router-cli": "^1.157.16",
		"@tanstack/router-plugin": "^1.157.16",
		"@types/bun": "latest",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitejs/plugin-react": "^5.1.3",
		"concurrently": "^9.2.1",
		"fast-glob": "^3.3.3",
		"prisma": "^6.19.2",
		"react-dev-inspector": "^2.0.1",
		"vite": "^7.3.1"
	}
}
